{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lingua-zen",
  "version": "0.1.0",
  "identifier": "com.linguazen.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lingua-Zen",
        "width": 500,
        "minWidth": 450,
        "maxWidth": 600,
        "height": 450,
        "minHeight": 450,
        "maxHeight": 800,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": false,
        "center": true
      },
      {
        "label": "settings",
        "title": "Lingua-Zen Settings",
        "width": 800,
        "height": 820,
        "visible": false,
        "decorations": false,
        "skipTaskbar": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["lingua-zen"]
      }
    }
  }
}